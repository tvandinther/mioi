---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
    const allPosts = await getCollection("blog");
    return allPosts.map((post) => ({
        params: { slug: post.slug }, props: { post } 
    }));
}

type Props = {
    post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { Content } = await post.render();
---
<BaseLayout pageTitle={post.data.title}>
    <article class="my-8 max-w-4xl m-auto prose">
        <h1 class="text-4xl">{post.data.title}</h1>
        <h3 class="text-lg italic">Written by {post.data.author}</h3>
        <div class="flex child:m-2">
            <p class="text-sm text-gray-500">{post.data.date.toLocaleDateString()}</p>
            {post.data.lastUpdated && (
                <p class="text-sm text-gray-500">Last updated: {post.data.lastUpdated.toLocaleDateString()}</p>
            )}
        </div>
        <div class="m-2 flex">
            {post.data.tags.map((tag) => (
                <a href={`../tags/${tag}`} class="text-sm bg-gray-200 rounded-full px-3 py-1 text-gray-700 mr-2 hover:bg-gray-300">
                    {tag}
                </a>
            ))}
        </div>
        <Content />
    </article>
</BaseLayout>
  