---
import type { CollectionEntry } from "astro:content";

type Props = {
    post: CollectionEntry<"blog">
}

const { post } = Astro.props;
---
<div class="flex">
    <a
    class="flex flex-col justify-center items-center bg-gray-200 rounded-md p-2 m-2 hover:bg-gray-300" 
    href={`/blog/posts/${post.slug}`}>
        <p class="m-1">{post.data.title}</p>
        <p class="m-1">{post.data.date.toLocaleDateString()}</p>
    </a>
</div>