---
import Hamburger from "./Hamburger.astro";
import NavigationMenu from "./NavigationMenu.astro";
---
<header class="flex bg-primary w-screen p-3 h-16 sticky z-50 [&.hide]:-top-16 top-0 transition-[top]">
  <span class="relative bottom-2 font-display text-5xl text-page mr-8 ml-8 lg:ml-16">mioi.io</span>
  <nav class="w-full">
    <Hamburger />
    <NavigationMenu />
  </nav>
</header>
<script is:inline>
  (function() {var p = window.pageYOffset;
  const h = document.querySelector("header");
  window.addEventListener("scroll", () => {
    const c = window.pageYOffset;
    if (window.scrollHiding.header) p > c ? h.classList.remove("hide") : h.classList.add("hide");
    p = c;
  })})();
</script>