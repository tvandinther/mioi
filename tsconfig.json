{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "lib": ["ESNext", "DOM"],
    "strictNullChecks": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@helpers/*": ["src/helpers/*"],
    },
    "typeRoots": ["node_modules/@types", "src/types"],
  },
}